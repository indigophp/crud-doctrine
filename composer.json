{
    "name": "indigophp/crud-doctrine",
    "description": "CRUD backend using Doctrine",
    "license": "MIT",
    "keywords": ["CRUD", "doctrine"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "indigophp/crud": "0.1.*@dev",
        "indigophp/hydra": "0.1.*@dev",
        "doctrine/orm": "~2.5"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1",
        "henrikbjorn/phpspec-code-coverage" : "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Indigo\\Crud\\Doctrine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Indigo\\Crud\\Stub\\": "vendor/indigophp/crud/stubs/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
